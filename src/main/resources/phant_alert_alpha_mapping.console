    "settings" : {
        "number_of_shards" : 2
    },
    "mappings" : {
        "alpha" : {
            "properties" : {
                "source" : { "type" : "text" },
                "text" : { "type" : "text" },
                "timestamp" : { "type" : "date" },
                "class" : { "type" : "keyword" },
                "source-link" : { "type" : "keyword" },
                "severity" : { "type" : "keyword" },
                "location" : { "type" : "nested" },
                "impacts" : { "type" : "nested" },
                "data" : { "type" : "nested" },
                "signatures" : { "type" : "keyword" }
            }
        }
    }
}
